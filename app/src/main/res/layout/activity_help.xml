<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.user0308.scutkicking.activity.HelpActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bangzhuxin"
        android:id="@+id/imageView2"
        />

<ImageButton
    android:layout_width="220dp"
    android:layout_height="100dp"
    android:id="@+id/helpreturn"
    android:background="@drawable/bangzhufanhui"

    app:layout_constraintBottom_toBottomOf="@+id/imageView2"
    android:layout_marginBottom="8dp"
    app:layout_constraintTop_toTopOf="@+id/imageView2"
    android:layout_marginTop="8dp"
    android:layout_marginRight="8dp"
    app:layout_constraintRight_toRightOf="@+id/imageView2"
    android:layout_marginLeft="8dp"
    app:layout_constraintLeft_toLeftOf="@+id/imageView2"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintVertical_bias="0.0" />


<ImageButton
    android:layout_width="300dp"
    android:layout_height="120dp"
    android:id="@+id/gamerule"
    android:background="@drawable/youxiguizebangzhu"

    android:layout_marginRight="8dp"
    app:layout_constraintRight_toRightOf="@+id/imageView2"
    app:layout_constraintBottom_toBottomOf="@+id/imageView2"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="8dp"
    app:layout_constraintLeft_toLeftOf="@+id/imageView2"
    app:layout_constraintTop_toTopOf="@+id/imageView2"
    android:layout_marginTop="8dp"
    app:layout_constraintVertical_bias="0.497" />


    <ImageButton
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/about"
        android:background="@drawable/guanyubangzhu"

        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="@+id/imageView2"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintVertical_bias="0.884" />
</android.support.constraint.ConstraintLayout>
